{
    "extends": ["defaults"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "arrowFunctions": true,
        "blockBindings": true,
        "templateStrings": true,
        "classes": true,
        "objectLiteralShorthandProperties": true,
        "jsx": true
    },
    "rules": {
        "semi": 2,
        "eqeqeq": 2,
        "no-console": 1,
        "indent": [1, 4, {"SwitchCase": 1}]
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "$": true,
        "Promise": true
    }
}
